{% extends 'layout.twig' %}

{% block content %}


	<style>


.rank {
position: relative;
display: inline-block;
width: 169px;
padding: 11px;
margin: 2px 4px;
background: #CD4436;
padding-left: 30px;

}

.rank-rank {
position: absolute;
top: -7px;
left: 3px;
font-size: 34px;
